/* ===== MEJORAS PARA .modalOption ===== */
.modalOption {
/* Tus estilos actuales se mantienen, solo agregamos: */
transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
opacity: 0;
transform: translateY(-10px);
pointer-events: none;
box-shadow: 0px 8px 30px rgba(0, 0, 0, 0.2);
}

.modalOption.show,
.modalOption:not([style*=“display: none”]) {
opacity: 1;
transform: translateY(0);
pointer-events: all;
}

/* ===== MEJORAS PARA .contenedor-boton ===== */
.contenedor-boton {
/* Animaciones suaves al hover */
transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
position: relative;
overflow: hidden;
cursor: pointer;
}

/* Efecto de brillo que se desliza */
.contenedor-boton::before {
content: ‘’;
position: absolute;
top: 0;
left: -100%;
width: 100%;
height: 100%;
background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.15), transparent);
transition: left 0.5s ease;
}

.contenedor-boton:hover::before {
left: 100%;
}

.contenedor-boton:hover {
border-color: #3b82f6;
box-shadow: 0 6px 16px rgba(59, 130, 246, 0.2);
transform: translateY(-3px);
}

.contenedor-boton:active {
transform: translateY(-1px);
box-shadow: 0 3px 10px rgba(59, 130, 246, 0.25);
}

/* ===== MEJORAS PARA .container-scrollable ===== */
.container-scrollable {
scroll-behavior: smooth;
}

/* Scrollbar personalizado y moderno */
.container-scrollable::-webkit-scrollbar {
width: 10px;
}

.container-scrollable::-webkit-scrollbar-track {
background: #f1f5f9;
border-radius: 10px;
margin: 4px 0;
}

.container-scrollable::-webkit-scrollbar-thumb {
background: linear-gradient(180deg, #3b82f6, #2563eb);
border-radius: 10px;
transition: background 0.3s ease;
}

.container-scrollable::-webkit-scrollbar-thumb:hover {
background: linear-gradient(180deg, #2563eb, #1d4ed8);
}

/* ===== MEJORAS PARA INPUTS DE BÚSQUEDA ===== */
/* Asumiendo que tienes inputs con type=“text” */
input[type=“text”],
input[type=“search”] {
transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
border-radius: 25px;
outline: none;
}

input[type=“text”]:focus,
input[type=“search”]:focus {
border-color: #3b82f6;
box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1),
0 4px 20px rgba(59, 130, 246, 0.25);
transform: translateY(-2px);
}

input[type=“text”]::placeholder,
input[type=“search”]::placeholder {
transition: color 0.3s ease;
}

input[type=“text”]:focus::placeholder,
input[type=“search”]:focus::placeholder {
color: #60a5fa;
}

/* ===== MEJORAS PARA OPCIONES/SELECTS ===== */
