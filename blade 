/* =========================================================
   ContainerBase.razor.css  (MINIMAL + ANIMACIONES)
   - Sin barra azul
   - UI limpio
   - Animaciones suaves
   - SIN CAMBIAR HTML
   ========================================================= */

/* ===============================
   1) BARRA SUPERIOR (tu div principal flex)
   =============================== */
div[style*="justify-content: space-between"]{
    background: #ffffff;
    border: 1px solid #e9e9e9;
    border-radius: 14px;
    padding: 8px 12px;
    margin: 0 20px;

    box-shadow: 0 6px 18px rgba(0,0,0,.06);

    position: relative;

    /* animación al cargar (suave) */
    animation: topbarFadeIn .22s ease-out;
}

@keyframes topbarFadeIn{
    from{ opacity: 0; transform: translateY(-4px); }
    to{ opacity: 1; transform: translateY(0); }
}

/* Texto e iconos por defecto (negro suave) */
div[style*="justify-content: space-between"] *{
    color: #1f2937 !important;
}

/* svg (iconos) */
div[style*="justify-content: space-between"] svg{
    fill: #1f2937 !important;
    color: #1f2937 !important;
    opacity: .92;
    transition: transform .15s ease, opacity .15s ease;
}

/* Íconos con hover suave */
div[style*="justify-content: space-between"] svg:hover{
    opacity: 1;
    transform: translateY(-1px);
}

/* ===============================
   2) TAB ACTIVO (tu clase actual)
   =============================== */
.SeleccionarOpcion{
    background: #f3f4f6;
    border-radius: 999px;
    padding: 6px 12px;
    border: 1px solid #ececec;

    transition: transform .12s ease, background .12s ease, box-shadow .12s ease;
}

.SeleccionarOpcion:hover{
