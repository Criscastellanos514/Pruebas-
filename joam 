/* =========================================================
   ContainerBase.razor.css (MINIMAL + BOTONES LEVANTADOS)
   - Sin cambiar HTML
   - Barra limpia
   - Botones flotantes con animación
   - Buscador tipo "pill"
   - Dropdown con animación
   ========================================================= */

/* ===============================
   1) BARRA SUPERIOR (tu contenedor principal flex)
   =============================== */
div[style*="justify-content: space-between"]{
    background: #ffffff;
    border: 1px solid #e9e9e9;
    border-radius: 14px;
    padding: 10px 12px;
    margin: 0 20px;
    box-shadow: 0 8px 20px rgba(0,0,0,.06);
    position: relative;

    animation: topbarFadeIn .22s ease-out;
}

@keyframes topbarFadeIn{
    from{ opacity: 0; transform: translateY(-4px); }
    to{ opacity: 1; transform: translateY(0); }
}

/* texto base */
div[style*="justify-content: space-between"] *{
    color: #1f2937 !important;
}

/* svg icons base */
div[style*="justify-content: space-between"] svg{
    fill: #1f2937 !important;
    color: #1f2937 !important;
    opacity: .92;
    transition: transform .15s ease, opacity .15s ease;
}

/* icon hover (sube poquito) */
div[style*="justify-content: space-between"] svg:hover{
    opacity: 1;
    transform: translateY(-1px);
}

/* ===============================
   2) BOTONES LEVANTADOS (Tabs / acciones dentro de la barra)
   - SIN HTML: aplicamos estilo general a los hijos directos
   =============================== */

/* agrupaciones principales dentro del flex */
div[style*="justify-content: space-between"] > div{
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
}

/* Aquí se "levantan" los items clicables típicos:
   span/div/button/a dentro de los grupos */
div[style*="justify-content: space-between"] > div > button,
div[style*="justify-content: space-between"] > div > a,
div[style*="justify-content: space-between"] > div > span,
div[style*="justify-content: space-between"] > div > div{
    background: #ffffff;
    border: 1px solid #e7e7e7;
    border-radius: 999px;
    padding: 7px 12px;

    box-shadow: 0 8px 18px rgba(0,0,0,.10);
    transform: translateY(0);

    transition:
        transform .14s ease,
        box-shadow .14s ease,
        background .14s ease,
        border-color .14s ease;

    user-select: none;
}

/* hover: se levanta */
div[style*="justify-content: space-between"] > div > button:hover,
div[style*="justify-content: space-between"] > div > a:hover,
div[style*="justify-content: space-between"] > div > span:hover,
div[style*="justify-content: space-between"] > div > div:hover{
    transform: translateY(-2px);
    box-shadow: 0 14px 28px rgba(0,0,0,.14);
    border-color: #dfe3ea;
    background: #fbfcff;
}

/* click: baja (efecto press) */
div[style*="justify-content: space-between"] > div > button:active,
div[style*="justify-content: space-between"] > div > a:active,
div[style*="justify-content: space-between"] > div > span:active,
div[style*="justify-content: space-between"] > div > div:active{
    transform: translateY(0);
    box-shadow: 0 8px 18px rgba(0,0,0,.10);
}

