}

/* ===============================
   5) DROPDOWN / FORMULARIO (modalOption)
   =============================== */
.modalOption{
    background: #ffffff !important;
    border-radius: 16px;
    border: 1px solid #e5e7eb !important;
    box-shadow: 0 20px 45px rgba(0,0,0,.18);
