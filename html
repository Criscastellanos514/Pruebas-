    </div>
  </div>

  <script>
    (function () {
      function startProgress() {
        const bar = document.getElementById("barFill") || document.querySelector(".bar-fill");
        if (!bar) return;

        bar.style.width = "0%";

        let p = 0;
        const intervalMs = 240;
        const minStep = 0.3;
        const maxStep = 1.1;
        const cap = 88;

        const timer = setInterval(() => {
          if (p < cap) {
            p += (Math.random() * (maxStep - minStep)) + minStep;
            if (p > cap) p = cap;
            bar.style.width = Math.floor(p) + "%";
          }
        }, intervalMs);

        window.addEventListener("load", () => {
          clearInterval(timer);
          bar.style.width = "100%";
        });

        setTimeout(() => {
          if (parseInt(bar.style.width || "0", 10) < 100) {
            clearInterval(timer);
            bar.style.width = "100%";
          }
        }, 8000);
      }

      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", startProgress);
      } else {
        startProgress();
      }
    })();
  </script>

  <script src="_framework/blazor.webassembly.js"></script>
</body>
