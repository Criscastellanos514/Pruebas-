@using System.Net.Http
@using System.Text.Json
@inject HttpClient Http

<div class="filters-container">
    @* --- FILTROS DINÁMICOS --- *@
    @foreach (var item in ListNameOrderFilter)
    {
        <div class="filter-wrapper">
            <div class="filter-pill @(RenderModal == item.Key ? "active" : "")" 
                 @onclick="@(() => ShowModalOrderBy(item.Key))">
                 
                <span class="icon-opacity">
                    <Icons Name="@Icons.GetValueOrDefault(item.Key).ToLower()" Width="16" Height="16" />
                </span>

                <span class="filter-text">@item.Key</span>

                <span class="chevron-icon">
                    <Icons Name="chevron-down" Width="14" Height="14" />
                </span>
            </div>

            @if (RenderModal == item.Key)
            {
                <div class="dropdown-card">
                    <div class="dropdown-header">Ordenar por</div>

                    <div class="dropdown-item" 
                         @onclick="@(() => ChangeOrderBy(NameinClass.GetValueOrDefault(item.Key), true))">
                        <span>Ascendente</span>
                        @if (item.Value == true) { <span class="active-dot">●</span> }
                    </div>

                    <div class="dropdown-item" 
                         @onclick="@(() => ChangeOrderBy(NameinClass.GetValueOrDefault(item.Key), false))">
                        <span>Descendente</span>
                        @if (item.Value == false) { <span class="active-dot">●</span> }
                    </div>
                </div>
            }
        </div>
    }

    @* --- BOTÓN INTELIGENTE GEMINI --- *@
    <div class="filter-wrapper">
        <button class="ai-button @(isAnalyzing ? "loading" : "")" @onclick="AnalyzeBoardWithGemini">
            @if (isAnalyzing)
            {
                <span class="spinner"></span>
                <span>Pensando...</span>
            }
            else
            {
                <span>✨ Resumen IA</span>
            }
        </button>

        @if (!string.IsNullOrEmpty(aiSummary))
        {
            <div class="ai-summary-card">
                <div class="ai-summary-header">
                    <span>✨ Análisis de Gemini</span>
                    <button class="close-btn" @onclick="@(() => aiSummary = "")">×</button>
                </div>
                <div class="ai-summary-body">
                    @aiSummary
                </div>
            </div>
        }
    </div>
</div>

@code {
    private bool isAnalyzing = false;
    private string aiSummary = "";
    private const string apiKey = ""; // La API Key se maneja internamente

    private async Task AnalyzeBoardWithGemini()
    {
        if (isAnalyzing) return;
        isAnalyzing = true;
        aiSummary = "";

        try
        {
            var currentStatus = string.Join(", ", ListNameOrderFilter.Select(f => $"{f.Key}: {(f.Value == true ? "Asc" : "Desc")}"));
            var prompt = $"Analiza esta configuración de filtros en un Kanban: {currentStatus}. Dame un consejo de productividad de 2 líneas.";

            var payload = new { contents = new[] { new { parts = new[] { new { text = prompt } } } } };

            HttpResponseMessage response = null;
            for (int i = 0; i < 5; i++) // Reintentos con Backoff
            {
                var request = new HttpRequestMessage(HttpMethod.Post, $"https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key={apiKey}");
                request.Content = new StringContent(JsonSerializer.Serialize(payload), System.Text.Encoding.UTF8, "application/json");
                response = await Http.SendAsync(request);
                if (response.IsSuccessStatusCode) break;
                await Task.Delay((int)Math.Pow(2, i) * 1000);
            }

            if (response != null && response.IsSuccessStatusCode)
            {
                var json = await response.Content.ReadAsStringAsync();
                using var doc = JsonDocument.Parse(json);
                aiSummary = doc.RootElement.GetProperty("candidates")[0].GetProperty("content").GetProperty("parts")[0].GetProperty("text").GetString();
            }
        }
        catch { aiSummary = "Error al conectar con la IA."; }
        finally { isAnalyzing = false; }
    }
}

